root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
max_line_length = 140
trim_trailing_whitespace = true
end_of_line = lf

[*.js]
ij_javascript_force_quote_style = true
ij_javascript_use_double_quotes = false
ij_javascript_object_literal_wrap = split_into_lines
ij_javascript_array_initializer_new_line_after_left_brace = true
ij_javascript_array_initializer_right_brace_on_new_line = true
ij_javascript_array_initializer_wrap = split_into_lines
ij_javascript_enforce_trailing_comma = whenmultiline

[*.ts]
ij_typescript_force_quote_style = true
ij_typescript_use_double_quotes = false
ij_typescript_object_literal_wrap = split_into_lines
ij_typescript_array_initializer_new_line_after_left_brace = true
ij_typescript_array_initializer_right_brace_on_new_line = true
ij_typescript_array_initializer_wrap = split_into_lines
ij_typescript_enforce_trailing_comma = whenmultiline

[*.html]
ij_html_attribute_wrap = split_into_lines
ij_html_enforce_quotes = true
ij_html_quote_style = double

[*.md]
max_line_length = off
trim_trailing_whitespace = false
